// out: ../main.css

@import 'colors.styl';
@import 'text.styl';
@import 'util.styl';

*
  box-sizing border-box
  transition 0.2s ease-in-out

body
  background-color $white
  color $black
  font-family 'Rubik', Helvetica, Arial, sans-serif;
  font-size 16px
  line-height 1.5
  transition 0s

.logo-img
  height 39px
  width @height
  vertical-align bottom
  margin-right 5px

.loader
  text-align center
  & ul
    width 100px
    height 40px
    margin 0 auto
    & .dot
      position absolute
      top 35%
      height 8px
      width 8px
      border-radius 100%
      background-color $white
      animation wave 0.5s ease-in-out infinite alternate
    & .dot1
      left 21%
    & .dot2
      left 46%
    & .dot3
      left 71%

for num in (1..3)
  .loader ul li:nth-child({num})
    animation-delay (0.15s * num)

@keyframes wave
  0% { top: 35% }
  100% { top: 65% }

input
  width 100%
  padding 8px 12px
  border 1px solid $lite
  font-family 'Rubik', Helvetica, Arial, sans-serif;
  font-size 16px
  margin-bottom 10px
  &.error
    border 1px solid $red
  &::placeholder
    transition 0.2s ease-in-out
  &:focus
    outline none
    border 1px solid $grey
    &::placeholder
      color $light-grey

.button
  min-width 160px
  padding 11px 40px 9px
  background-color $green
  cursor pointer
  border-radius 50px
  border none
  text-transform uppercase
  font-family 'Rubik', Helvetica, Arial, sans-serif;
  font-size 12px
  letter-spacing 2px
  color $white
  font-weight 500
  transition 0.2s ease-in-out
  &:focus
    outline none
  &:hover
    background-color $hover-green
    color $white
  &.blue
    background-color $blue
    &:hover
      background-color $hover-blue
  &.slim
    padding 11px 25px 9px
    font-weight 300
  &.small
    padding 9px 20px 7px
    min-width 140px
    font-weight 300
    font-size 11px
  &.big
    padding 14px 40px
    font-size 14px
  &.resizing
    &:hover
      transform scale(1.06)
    &:active
      transform scale(1)
  &.outline
    border 1px solid $light-transparent
    color $white
    background-color transparent
    &:hover
      background-color transparent
      border 1px solid $white

footer
  background-color $black
  color $white

