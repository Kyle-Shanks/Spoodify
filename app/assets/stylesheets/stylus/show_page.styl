// main: _main.styl

.show-item-info
  position fixed
  top 40px
  left 250px
  width 280px
  text-align center
  & h2
    margin 10px 0
    font-size 32px
    line-height 40px
    letter-spacing 0px
  & h5
    margin-bottom 10px

.show-img-container
  width 280px
  height 280px
  background-color rgba(0,0,0,0.3)
  box-shadow 0 0 10px rgba(0,0,0,0.3)
  margin-bottom 10px
  & .show-img
    width 100%

.show-item-tracks
  padding 40px 20px 20px 40px
  padding-left 320px

.show-button-container
  margin 20px 0
  & * + *
    margin-top 10px
