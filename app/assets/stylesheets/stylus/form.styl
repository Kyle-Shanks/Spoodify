// main: _main.styl

.form-container
  background-color $white
  text-align center

.form-header
  padding 25px 0
  margin-bottom 30px
  border-bottom 1px solid $lite

form
  margin 0 auto 40px
  max-width 450px

.form-buttons-container
  display flex
  flex-direction row-reverse
  justify-content space-around
  padding 10px 0
  & button
    flex 1 1 0
    max-width 240px
    & + button
      margin-right 20px

ul.errors
  color $red
  margin-bottom 20px
