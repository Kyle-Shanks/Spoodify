// main: _main.styl

.queue-container
  padding 40px
  & h2
    text-align center
    margin-bottom 40px

.audio-player-container
  position fixed
  left 0
  right 0
  bottom 0
  height 100px
  padding 0 20px
  background-color $dark-grey
  color $white

.player-info, .player-alt-controls
  width 30%
  min-width 180px
  padding 20px 0

.player-artwork
  height 60px
  width @height
  margin-right 15px
  vertical-align bottom
  & img
    width 100%

.player-info-text
  color $white
  vertical-align super
  & p, & a
    font-size 14px
    font-weight 300
    line-height 1.3
    max-width 160px
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
  & a, & a:hover, & .small-text a:hover
    color $white
  & .small-text a
    font-size 12px
    color $light-transparent

.player-controls
  padding 10px 0

.control-svg-container
  text-align center
  height 45px
  &:hover
    background-color rgba(255,255,255,0.05)
  & .svg-container
    height 45px
    width @height
    margin 0 5px

.player-alt-controls
  text-align right
