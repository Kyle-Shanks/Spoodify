<!DOCTYPE html>
<html>
  <head>
    <title>Spoodify</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="shortcut icon" type="image/png" href="<%= image_url('spotify_icon_black.png') %>"/>
    <link href="https://fonts.googleapis.com/css?family=Rubik:300,400,400i,500,700,700i" rel="stylesheet">

    <script type="text/javascript">
      window.heroSVG = "<%= image_url('hero-burst.svg') %>";
      window.userImg = "<%= image_url('default_user.png') %>";
      window.whiteSpot = "<%= image_url('spotify_icon_white.png') %>";
      window.blackSpot = "<%= image_url('spotify_icon_black.png') %>";
    </script>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
